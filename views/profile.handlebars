<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img class="img-thumbnail" src="{{user.image}}" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{user.fullname}}</h5>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <p class="card-text"><i class="fa fa-user"></i> {{user.fullname}}</p>
            {{#if user.email}}
            <p class="card-text"><i class="fa fa-envelope"></i> {{user.email}}</p>
            {{else}}
            <form action="/addEmail" method="POST">
                <input type="text" name="email" class="form-control"
                placeholder="Enter email address">
                <button type="submit" class="btn btn-danger">Save</button>
            </form>
            {{/if}}
            {{#if user.phone}}
            <p class="card-text"><i class="fa fa-phone"></i> {{user.phone}}</p>
            {{else}}
            <form action="/addPhone" method="POST" class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="phone" class="form-control"
                    placeholder="Enter Phone Number" required>
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <i class="fa fa-check"></i>
                </button>
            </form>
            {{/if}}
            {{#if user.location}}
            <p class="card-text"><i class="fa fa-map-marker"></i> {{user.location}}</p>
            {{else}}
            <form action="/addLocation" method="POST" class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="location" class="form-control"
                    placeholder="Enter your Location / city and country" required>
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <i class="fa fa-check"></i>
                </button>
            </form>
            {{/if}}
        </div>
    </div>
</div>