<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img class="img-thumbnail" src="{{user.image}}" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{user.fullname}}</h5>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <p class="card-text"><i class="fa fa-user"></i> {{user.fullname}}</p>
            <p class="card-text"><i class="fa fa-envelope"></i> {{user.email}}</p>
        </div>
    </div>
</div>